<h1>{{ "forgotyourpassword.title"|t }}</h1>

{% if displayEmailNotFound %}
<div class="alert alert-danger">{{ "forgotyourpassword.emailnotfound"|t({"email":email}) }}</div>
{% endif %}

<form method="post">
    <div class="form-group">
        <label for="email">{{ "forgotyourpassword.enteremail"|t }}</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="{{ "forgotyourpassword.email"|t }}" value="{{ email }}" required>
    </div>
    <button type="submit" class="btn btn-primary">{{ "forgotyourpassword.submit"|t }}</button>
</form>
