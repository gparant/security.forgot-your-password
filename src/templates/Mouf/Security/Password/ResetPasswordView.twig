<div class="row">
    <div class="col-xs-12 col-lg-4 col-lg-offset-4">

        <h1>{{ "resetpassword.title"|t }}</h1>

        {% if displayPoorPassword %}
        <div class="alert alert-danger">{{ passwordRules|raw }}</div>
        {% else %}
        <p>{{ passwordRules|raw }}</p>
        {% endif %}

        {% if displayMismatchPassword %}
        <div class="alert alert-danger">{{ "resetpassword.mismatchingpasswords"|t }}</div>
        {% endif %}

        <form method="post">
            <input type="hidden" class="form-control" id="token" name="token" value="{{ token }}">

            <div class="form-group {{ displayMismatchPassword ? "has-error":"" }}">
                <label for="password">{{ "resetpassword.password"|t }}</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="{{ "resetpassword.password"|t }}" required>
            </div>
            <div class="form-group {{ displayMismatchPassword ? "has-error":"" }}">
                <label for="password">{{ "resetpassword.confirmpassword"|t }}</label>
                <input type="password" class="form-control" id="confirmpassword" name="confirmpassword" placeholder="{{ "resetpassword.confirmpassword"|t }}" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">{{ "resetpassword.submit"|t }}</button>
        </form>

    </div>
</div>